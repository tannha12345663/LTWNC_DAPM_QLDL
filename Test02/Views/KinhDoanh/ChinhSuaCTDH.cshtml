@model Test02.Models.ChiTietDonHang
@using Test02.Models;
@{
    ViewBag.Title = "ChinhSuaCTDH";
    Layout = "~/Views/KinhDoanh/Layout/LayoutKD.cshtml";
    ViewBag.dh = "active";
    ViewBag.nd = "Chỉnh sửa chi tiết đơn hàng";
    QuanLyDLEntities2 db = new QuanLyDLEntities2();
}

<div class="tile">
    @{var madl = db.DonHangs.Where(s => s.MaDH == Model.MaDH).FirstOrDefault();
    }
    <h2>Chỉnh sửa chi tiết đơn hàng @Model.MaDH của đại lý @madl.MaDL</h2>
    <div class="tile-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>ChiTietDonHang</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaCTDH)
                @Html.HiddenFor(model => model.MaDH)
                @Html.HiddenFor(model => model.ChietKhau)
                @Html.HiddenFor(model => model.ThanhTien)
                <div class="form-group">
                    @Html.LabelFor(model => model.MaSP, "MaSP", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("MaSP", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaSP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DonViTinh, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <select class="form-control" id="DonViTinh" name="DonViTinh">
                            <option selected="@Model.DonViTinh">@Model.DonViTinh</option>
                            <option value="Thùng">Thùng</option>
                            <option value="Lon">Lon</option>
                            <option value="Chai">Chai</option>
                            <option value="Lốc (6 lon)">Lốc (6 lon)</option>
                            <option value="Lốc (6 chai)">Lốc (6 chai)</option>
                        </select>
                    </div>
                    @Html.ValidationMessageFor(model => model.DonViTinh, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DonGia, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.DiemGiao, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DiemGiao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiemGiao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu chi tiết đơn hàng @Model.MaDH" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Quay lại danh sách đơn hàng", "QuanLyDH")
        </div>
    </div>
</div>


