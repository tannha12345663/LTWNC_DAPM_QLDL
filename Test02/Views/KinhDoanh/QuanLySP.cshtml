@model IEnumerable<Test02.Models.SanPham>
@{
    ViewBag.Title = "QuanLySP";
    Layout = "~/Views/KinhDoanh/Layout/LayoutKD.cshtml";
    ViewBag.sp = "active";
    ViewBag.nd = "Danh sách sản phẩm";
}
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">

                <div class="row element-button">
                    <div class="col-sm-2">
                        <a class="btn btn-delete btn-sm nhap-tu-file" href="~/KinhDoanh/ThemSP"><i class="fas fa-file-upload"></i> Thêm mới sản phẩm</a>
                    </div>
                    <div class="col-sm-2">
                        <a class="btn btn-delete btn-sm print-file" type="button" title="In" onclick="myApp.printTable()">
                            <i class="fas fa-print"></i> In dữ liệu
                        </a>
                    </div>
                    <div class="col-sm-2">
                        <a class="btn btn-delete btn-sm print-file js-textareacopybtn" type="button" title="Sao chép" href="~/KinhDoanh/QuanLySP"><i class="fas fa-copy"></i> Làm mới danh sách</a>
                    </div>

                </div>
                <div id="sampleTable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                    <div class="row">


                        <div class="col-md-1">
                            <div id="sampleTable_filter" class="dataTables_filter">
                                <label>Tìm kiếm:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="sampleTable"></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" id="sampleTable" role="grid" aria-describedby="sampleTable_info">
                                <tr>
                                    <th class="sorting" tabindex="0" aria-controls="sampleTable" rowspan="1" colspan="1" aria-label="ID nhân viên: activate to sort column ascending" style="width: 80px;">
                                        Mã Sản phẩm
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenSP)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Gia)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DonViTinh)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.NgaySX)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.HanSD)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TongTon)
                                    </th>

                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaSP)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenSP)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Gia)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DonViTinh)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NgaySX)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.HanSD)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TongTon)
                                        </td>

                                        <td>
                                            <a href="/KinhDoanh/ChinhSuaSP/@item.MaSP" class="btn btn-primary btn-sm edit" > Chỉnh sửa</a>

                                            ||
                                            <a href="/KinhDoanh/XoaSP/@item.MaSP"  class="btn btn-primary btn-sm deleted">
                                                Xóa sản phẩm
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    //In dữ liệu
    var myApp = new function () {
        this.printTable = function () {
            var tab = document.getElementById('sampleTable');
            var win = window.open('', '', 'height=700,width=700');
            win.document.write(tab.outerHTML);
            win.document.close();
            win.print();
        }
    }
</script>
<!-- Essential javascripts for application to work-->
<script src="~/Content/js/jquery-3.2.1.min.js"></script>
<script src="~/Content/js/popper.min.js"></script>
<script src="~/Content/js/bootstrap.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="src/jquery.table2excel.js"></script>
<script src="~/Content/js/main.js"></script>
<!-- The javascript plugin to display page loading on top-->
<script src="~/Content/js/plugins/pace.min.js"></script>
<!-- Page specific javascripts-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
<!-- Data table plugin-->
<script type="text/javascript" src="~/Content/js/plugins/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="~/Content/js/plugins/dataTables.bootstrap.min.js"></script>