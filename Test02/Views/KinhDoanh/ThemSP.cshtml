@model Test02.Models.SanPham

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/KinhDoanh/Layout/LayoutKD.cshtml";
    ViewBag.sp = "active";
    ViewBag.nd = "Thêm mới sản phẩm";
}
<div class="tile">
    <h3 class="tile-title">Tạo mới sản phẩm</h3>
    <div class="tile-body">
        <div class="row element-button">

        </div>
        <form class="row" action="~/KinhDoanh/ThemSP" method="post">
            @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.TenSP, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.DonViTinh, htmlAttributes: new { @class = "control-label " })
                    <select class="form-control" id="DonViTinh" name="DonViTinh">
                        <option value="Lốc">Lốc </option>
                        <option value="Thùng">Thùng</option>
                        <option value="Lon">Lon</option>
                        <option value="Chai">Chai</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.DonViTinh, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Gia, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.NgaySX, htmlAttributes: new { @class = "control-label " })
                    <input class="form-control text-box single-line" data-val="true" data-val-date="The field NgayXuat must be a date." id="NgaySX" name="NgaySX" type="datetime-local" value="">
                    @Html.ValidationMessageFor(model => model.NgaySX, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.HanSD, htmlAttributes: new { @class = "control-label " })
                    <input class="form-control text-box single-line" data-val="true" data-val-date="The field HanSH must be a date." id="HanSD" name="HanSD" type="datetime-local" value="">
                    @Html.ValidationMessageFor(model => model.HanSD, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-12">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="submit" value="Thêm mới sản phẩm" class="btn btn-save" />
                        <a class="btn btn-cancel" href="~/KinhDoanh/QuanLySP">Hủy bỏ</a>
                    </div>
                </div>
        </form>

    </div>
</div>