@model Test02.Models.NhanVienGH

@{
    ViewBag.Title = "ThemShipper";
    Layout = "~/Views/GiaoHang/Layout/LayoutGH.cshtml";
    ViewBag.gh_shippers = "active";
    ViewBag.nd = "Thêm nhân viên giao hàng";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <div class="tile" style="margin-left:50px; margin-right:50px">
                <div class="tile-body">
                    <h3 class="tile-title" style="text-align:center">THÊM NHÂN VIÊN GIAO HÀNG</h3>
                    <div>
                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.TinhTrang)
                            <div class="form-group">
                                <h5>Tên nhân viên:</h5>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <h5>Số điện thoại:</h5>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <h5>Địa chỉ:</h5>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-sm-2">
                                    <input type="submit" value="Thêm" class="btn btn-success" title="Lưu" />
                                </div>
                                <div class="col-sm-2">
                                    <a class="btn btn-danger" href="~/GiaoHang/DanhSachShipper" title="Trở về">
                                        Trở về
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}