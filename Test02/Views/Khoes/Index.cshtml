@model IEnumerable<Test02.Models.Kho>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/PhongKho/Layout/_LayoutPage1.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Thêm kho", "Create")
</p>
<table class="table table-hover table-bordered js-copytextarea" cellpadding="0" cellspacing="0" border="0"
                       id="sampleTable" >
    <tr>
        <th>
            Mã kho
        </th>
        <th>
            Tên kho
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Chức năng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaKho)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenKho)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiaChi)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MaKho }) |
        @Html.ActionLink("Details", "Details", new { id = item.MaKho }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MaKho })
    </td>
</tr>
}

</table>
