
@using Test02.Models;
@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Views/PhongKho/Layout/_LayoutPage1.cshtml";
    ViewBag.hh = "active";
    ViewBag.Name = "Quản lý hàng hóa";
    QuanLyDLEntities2 db = new QuanLyDLEntities2();
    var dssp = db.SanPhams.ToList();
    var dsctk = db.ChiTietKhoes.ToList();
}
@{
    var checkMessage = TempData["AlertMessage"];
    if (checkMessage == "Đã thêm")
    {
        <script>
            swal({
                title: "Thêm thành công",
                text: "Đã thêm phiếu đề nghị nhập kho @TempData["MaPNKho"]!",
                icon: "success",
                button: "OK",
            });
        </script>
    }
}

<div class="row">
    <div class="col-lg-12">
        <div class="tile">
            <div class="tile-body">
                <div class="row">
                    <div class="col-sm-2">
                        <a class="btn btn-delete btn-sm print-file" type="button" title="In" onclick="printDiv('printMe')">
                            <i class="fas fa-print"></i> In dữ liệu
                        </a>
                    </div>
                </div>
                <div id="printMe" class="table-responsive">
                    <h3 class="tile-title" id="sample1" style="text-align:center">DANH SÁCH SẢN PHẨM</h3>
                    <table class="table table-hover table-striped table-bordered js-copytextarea" cellpadding="0" cellspacing="0" border="0"
                           id="sampleTable">
                        <thead>
                            <tr class="table-warning">
                                <th>Mã sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Giá</th>
                                <th>Đơn vị tính</th>
                                <th>Ngày sản xuất</th>
                                <th>Hạn sử dụng</th>
                                <th>Tổng tồn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in dssp)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaSP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenSP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DonViTinh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgaySX)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HanSD)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TongTon)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <div class="row element-button">
                    <div class="col-sm-2">
                        <a class="btn btn-add btn-sm" href="TaoPhieuNhapKho" title="Thêm">
                            <i class="fas fa-plus"></i>
                            Tạo phiếu đề nghị nhập hàng hóa
                        </a>
                    </div>
                </div>
                <h3 class="tile-title" style="text-align:center">SẢN PHẨM SẮP HẾT HÀNG</h3>
                <table class="table table-hover table-bordered js-copytextarea" cellpadding="0" cellspacing="0" border="0"
                       id="sampleTable">
                    <thead>
                        <tr>
                            <th>Mã Kho</th>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá tiền</th>
                            <th>Đơn vị tính</th>
                            <th>Số lượng</th>
                            <th>Tình trạng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in dsctk)
                        {
                            if (item.TinhTrang == "Sắp hết hàng" || item.TinhTrang == "Hết hàng")
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaKho)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaSP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SanPham.TenSP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SanPham.Gia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SanPham.DonViTinh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoLuong)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TinhTrang)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

