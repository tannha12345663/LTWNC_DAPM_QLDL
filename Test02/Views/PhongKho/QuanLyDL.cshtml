
@using Test02.Models;
@{
    ViewBag.Title = "QuanLyDL";
    Layout = "~/Views/PhongKho/Layout/_LayoutPage1.cshtml";
    ViewBag.hh = "active";
    ViewBag.Name = "Quản lý hàng hóa";
    QuanLyDLEntities2 db = new QuanLyDLEntities2();
    var dssp = db.SanPhams.ToList();
    var dsctk = db.ChiTietKhoes.ToList();
}

<div class="row">
    <div class="col-lg-12">
        <div class="tile">
            <div class="tile-body">
                <div class="row element-button">
                    <div class="col-sm-2">
                        <a class="btn btn-add btn-sm" href="ThemSanPham" title="Thêm">
                            <i class="fas fa-plus"></i>
                            Tạo phiếu đề nghị nhập hàng hóa
                        </a>
                    </div>

                    <div class="col-sm-2">
                        <a class="btn btn-delete btn-sm print-file" type="button" title="In" onclick="myApp.printTable()">
                            <i class="fas fa-print"></i> In dữ liệu
                        </a>
                    </div>

                    <div class="col-sm-2">
                        <a class="btn btn-excel btn-sm" href="" title="In"><i class="fas fa-file-excel"></i> Xuất Excel</a>
                    </div>

                    <div class="col-sm-2">
                        <a class="btn btn-delete btn-sm pdf-file" type="button" title="In" onclick="myFunction(this)">
                            <i class="fas fa-file-pdf"></i> Xuất PDF
                        </a>
                    </div>

                    <div class="col-sm-2">
                        <a class="btn btn-delete btn-sm" type="button" title="Xóa" onclick="myFunction(this)">
                            <i class="fas fa-trash-alt"></i> Xóa tất cả
                        </a>
                    </div>
                </div>
                <h3 class="tile-title">DANH SÁCH SẢN PHẨM</h3>
                <table class="table table-hover table-bordered js-copytextarea" cellpadding="0" cellspacing="0" border="0"
                       id="sampleTable">
                    <thead>
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Đơn vị tính</th>
                            <th>Ngày sản xuất</th>
                            <th>Hạn sử dụng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in dssp)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaSP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenSP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DonViTinh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgaySX)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HanSD)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div>
                <h3 class="tile-title">SẢN PHẨM SẮP HẾT HÀNG</h3>
            </div>
            <div class="tile-body">
                <table class="table table-hover table-bordered js-copytextarea" cellpadding="0" cellspacing="0" border="0"
                       id="sampleTable">
                    <thead>
                        <tr>
                            <th>Mã Kho</th>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá tiền</th>
                            <th>Đơn vị tính</th>
                            <th>Tình trạng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in dsctk)
                        {
                            if(item.TinhTrang == "Sắp hết hàng")
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaKho)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaSP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SanPham.TenSP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SanPham.Gia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SanPham.DonViTinh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TinhTrang)
                                    </td>
                                </tr>
                            }
                            
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

