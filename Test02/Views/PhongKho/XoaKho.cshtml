@model Test02.Models.Kho
@{
    ViewBag.Title = "XoaKho";
    Layout = "~/Views/PhongKho/Layout/_LayoutPage1.cshtml";
    ViewBag.Name = "Xóa kho";
    ViewBag.qlk = "active";
    ViewBag.hieuung2 = "bx-tada";
}
<div class="tile">
    <h3>Bạn muốn xóa kho "@Model.TenKho"?</h3>
    <div class="tile-body">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Mã kho:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaKho)
            </dd>

            <dt>
                Tên Kho:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenKho)
            </dd>

            <dt>
                Địa chỉ:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DiaChi)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa vĩnh viễn" class="btn btn-outline-dark" />
                <a class="btn btn-outline-danger btn-sm" href="~/PhongKho/QuanLyKho">
                    <i class="fas fa-retweet"></i>
                    Trở lại
                </a>
            </div>
        }
    </div>
    </divclass="tile">

