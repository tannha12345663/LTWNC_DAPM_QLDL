                        <div class="col-md-12">
                            @Html.EditorFor(model => model.SLThucTe, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SLThucTe, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LyDo, "Chi tiết", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.LyDo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LyDo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!--<div class="form-group">
                        <div class="col-md-12">
