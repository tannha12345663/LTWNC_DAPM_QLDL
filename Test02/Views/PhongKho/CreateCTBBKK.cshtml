@model Test02.Models.ChiTietBienBang
@{
    ViewBag.Title = "CreateCTBBKK";
    Layout = "~/Views/PhongKho/Layout/_LayoutPage1.cshtml";
    ViewBag.bc = "active";
    ViewBag.Name = "Tạo chi tiết biên bản";
}
@{
    var checkMessage = TempData["AlertMessage"];
    if (checkMessage == "null")
    {
        <script>
            swal({
                title: "Dữ liệu trống!",
                text: "Bạn chưa điền đủ thông tin!",
                icon: "warning",
                button: "OK",
            });
        </script>
    }
}
<div class="row">
    <div class="col-lg-3 col-md-2 col-sm-12"></div>
    <div class="col-lg-6 col-md-8 col-sm-12">
        <div class="tile">

            @using (Html.BeginForm())
