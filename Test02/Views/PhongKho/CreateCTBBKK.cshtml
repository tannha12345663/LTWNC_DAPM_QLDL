                        <span class="pull-left">
                            <input type="submit" value="Lưu dữ liệu" class="btn btn-outline-dark" />
                            <a href="~/PhongKho/CreateBBKK" class="btn btn-outline-warning">Trở lại</a>
                        </span>
                        <span class="pull-right">
                            <a href="~/PhongKho/BaoCao" class="btn btn-outline-danger">Hủy bỏ</a>
                        </span>
                        <br />
