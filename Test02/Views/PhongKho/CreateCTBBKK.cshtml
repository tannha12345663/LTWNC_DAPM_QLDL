                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 class="text-center tile-title">Tạo chi tiết biên bản kiểm kê</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaKK)
                    @Html.HiddenFor(model => model.SLTonKho)

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaSP, "Tên sản phẩm", htmlAttributes: new { @class = "control-label col-md-12" })
