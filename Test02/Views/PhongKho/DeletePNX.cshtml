    ViewBag.Title = "DeletePNX";
    Layout = "~/Views/PhongKho/Layout/_LayoutPage1.cshtml";
}

<h3>Bạn có muốn xóa vĩnh viễn phiếu @Model.MaPhieu?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày lập:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayLap)
        </dd>

        <dt>
            Loại phiếu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiPhieu)
        </dd>

        <dt>
