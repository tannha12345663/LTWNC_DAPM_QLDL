
@model Test02.Models.ChiTietKho
@{
    ViewBag.Title = "DeleteCTKho";
    Layout = "~/Views/PhongKho/Layout/_LayoutPage1.cshtml";
    ViewBag.Name = "Xóa chi tiết kho";
    ViewBag.qlk = "active";
}


<h3>Bạn muốn xóa chi tiết kho @Model.MaCTKho của kho @Model.MaKho?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày nhập:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayNhap)
        </dd>

        <dt>
            Ngày xuất gần nhất:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayXuat)
        </dd>

        <dt>
            Số lượng (thùng):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
            Tình trạng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TinhTrang)
        </dd>

        <dt>
            Tên kho:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Kho.TenKho)
        </dd>

        <dt>
            Tên sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SanPham.TenSP)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa vĩnh viễn" class="btn btn-outline-danger" /> 
            <a class="btn btn-outline-dark btn-sm" href="/PhongKho/ChiTietKho/@Model.MaKho">
                <i class="fas fa-retweet"></i>
                Trở lại
            </a>
        </div>
    }
</div>
