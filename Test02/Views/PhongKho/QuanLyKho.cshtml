<div class="row">
    <div class="col-lg-12">
        <div class="tile">
            <div class="tile-body">
                <div class="row element-button">
                    <a class="btn btn-add btn-sm" href="ThemKho" title="Thêm" style="margin-left:20px;">
                        <i class="fas fa-plus"></i>
                        Thêm kho mới
                    </a>
                </div>
                <table class="table table-hover table-bordered js-copytextarea" cellpadding="0" cellspacing="0" border="0"
