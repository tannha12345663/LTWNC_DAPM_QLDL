                            </th>
                            <th>
                                Địa chỉ
                            </th>
                            <th>
                                Chức năng
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaKho)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenKho)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>
                                <td>
                                    @Html.ActionLink("Chỉnh sửa", "ChinhSuaKho", new { id = item.MaKho }) |
                                    @Html.ActionLink("Chi tiết", "ChiTietKho", new { id = item.MaKho }) |
                                    @Html.ActionLink("Xóa", "XoaKho", new { id = item.MaKho })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


