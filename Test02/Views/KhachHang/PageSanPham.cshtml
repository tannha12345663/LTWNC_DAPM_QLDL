@model IEnumerable<Test02.Models.SanPham>
@{
    ViewBag.Title = "PageSanPham";
    Layout = "~/Views/KhachHang/Layout/_LayoutKhachHang.cshtml";
    ViewBag.tcdl = "active";
    ViewBag.Name = "Trang chủ";
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <h3 class="tile-title">DANH SÁCH SẢN PHẨM</h3>
            <div class="tile-body">
                <div class="row">
                    @foreach (var item in Model)
                    {
                    <div style="margin:10px;">
                        <div class="widget-small primary coloured-icon">
                            <img src="~/Content/Img/SanPham/7up.jpg" style="height: 100px ; width: 100px;" alt="">
                            <div class="info">
                                <h4>@Html.DisplayFor(modelItem => item.TenSP)</h4>
                                <p><b>HSD: @Html.DisplayFor(modelItem => item.HanSD)</b></p>
                                <p><b>Mã sản phẩm: @Html.DisplayFor(modelItem => item.MaSP)</b></p>
                                <p><span class="badge bg-info">Chi tiết</span></p> <br />
                            </div>
                        </div>
                    </div>
            }
        
                </div>
            </div>
        </div>
    </div>
</div>

