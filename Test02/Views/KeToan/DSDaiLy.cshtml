@model IEnumerable<Test02.Models.DaiLy>
@using Test02.Models
@{
    ViewBag.Title = "DSDaiLy";
    Layout = "~/Views/KeToan/Layout/_LayoutPageKeToan.cshtml";
    ViewBag.dsdl = "active";
    ViewBag.nd = "Danh sách đại lý";
    QuanLyDLEntities2 database = new QuanLyDLEntities2();

}
<link href="~/Content/KeToan/badges.css" rel="stylesheet" />
@{
    if (TempData["taocn"] != null)
    {
        <script>
            swal({
                title: "Tạo phiếu công nợ thành công !!!!",
                icon: "success",
                button: "Thoát",
            });

        </script>

    }
    if (TempData["xoacn"] != null)
    {
        <script>
            swal({
                title: "Xóa phiếu công nợ thành công !!!!",
                icon: "success",
                button: "Thoát",
            });

        </script>

    }
    if (TempData["chinhsuacn"] != null)
    {
        <script>
            swal({
                title: "Chỉnh sửa phiếu công nợ thành công !!!!",
                icon: "success",
                button: "Thoát",
            });

        </script>

    }
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">

                <div class="row element-button">
                    <div class="col-sm-2">
                        <a class="btn btn-delete btn-sm print-file" title="In" onclick="myApp.printTable()">
                            <i class="fas fa-print"></i> In dữ liệu
                        </a>
                    </div>


                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-hover table-bordered js-copytextarea" cellpadding="0" cellspacing="0" border="0" id="sampleTable" role="grid">
                            @*//Phần render từng dòng trong C#*@
                            <thead>
                                <tr role="row">
                                    <th class="sorting" tabindex="0" aria-controls="sampleTable" style="width: 50px;">Mã đại lý</th>
                                    <th width="300" class="sorting" tabindex="0" aria-controls="sampleTable" style="width: 150px;">Tên đại lý</th>
                                    <th class="sorting" tabindex="0" aria-controls="sampleTable" style="width: 160px;">Loại đại lý</th>
                                    <th width="300" class="sorting" tabindex="0" aria-controls="sampleTable" style="width: 100px;">Tổng công nợ</th>

                                    <th width="100" class="sorting" tabindex="0" style="width: 100px;">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="width: 150px;">
                                            @Html.DisplayFor(modelItem => item.MaDL)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenDL)

                                        </td>
                                        <td>
                                            @{var tenldk = database.LoaiDLs.Find(item.MaLoaiDL);
                                            }
                                            @Html.DisplayFor(modelItem => tenldk.TenDaiLy)
                                        </td>

                                        <td>
                                            @{
                                                double tongno = 0;
                                                int sophieuno = 0;
                                                var congno = database.PhieuCongNoes.Where(n => n.MaDL == item.MaDL && n.TrangThai == "Chưa thanh toán");
                                                foreach (var cn in congno)
                                                {
                                                    tongno += (double)cn.TienNo;


                                                }
                                                sophieuno = congno.Count();
                                                var tiencongnno = string.Format("{0:0,0 vnđ}", tongno);

                                            }

                                            @Html.DisplayFor(modelItem => tiencongnno)

                                        </td>
                                      
                                       

                                        @{
                                            int tongdonhang = 0;
                                            var donhangdl = database.DonHangs.Where(dh => dh.MaDL == item.MaDL && dh.TinhTrangThanhToan == "Chưa thanh toán" && dh.TrangThai == "Đã xét duyệt");
                                            tongdonhang = donhangdl.Count();

                                        }
                                    <td style="text-align:center">

                                        <a href="~/KeToan/CongnoDL/@item.MaDL" class="btn btn-outline-primary btn-sm notification" ata-toggle="tooltip" title="Danh sách đơn hàng">
                                            <i class="fa fa-edit"></i>
                                            @{
                                                if (tongdonhang > 0)
                                                {
                                                    <span class="badge">
                                                        @Html.DisplayFor(modelItem => tongdonhang)
                                                    </span>
                                                }
                                            }
                                        </a>
                                       

                                        <a href="~/KeToan/DSCongnoNo/@item.MaDL" class="btn btn-outline-primary btn-sm notification" ata-toggle="tooltip" title="Chi tiết công nợ">
                                            <i class="fa fa-receipt"></i>
                                            @{
                                                if (sophieuno > 0)
                                                {
                                                    <span class="badge">
                                                        @Html.DisplayFor(modelItem => sophieuno)
                                                    </span>
                                                }
                                            }
                                        </a>





                                    </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    //In dữ liệu
    var myApp = new function () {
        this.printTable = function () {
            var tab = document.getElementById('sampleTable');
            var win = window.open('', '', 'height=800px,width=1200px');
            win.document.write(tab.outerHTML);
            win.document.close();
            win.print();
        }
    }

    // tim kiem
    oTable = $('#sampleTable').dataTable();
    $('#all').click(function (e) {
        $('#sampleTable tbody :checkbox').prop('checked', $(this).is(':checked'));
        e.stopImmediatePropagation();
    });

    // hien thi notification button
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });

</script>


