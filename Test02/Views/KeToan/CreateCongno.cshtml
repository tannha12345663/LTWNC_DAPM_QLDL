@model Test02.Models.PhieuCongNo

@{
    ViewBag.Title = "CreateCongno";
    Layout = "/Views/KeToan/Layout/_LayoutPageKeToan.cshtml";
}
<div class="tile">
    <div class="tile-body">
        <h3 style="text-align:center">PHIẾU CÔNG NỢ</h3>
        <form style="text-align:center">
            <label for="date">Ngày:</label>
            <input type="date" id="clock" class="date" name="ngay"><br>
            <label for="number">Mã số:</label>
            <input type="number" id="number" name="maso"> <br>
        </form>

        <form class="row">
            <div class="form-group col-md-12">
                <label class="control-label">Tên đại lý tiếp nhận: </label>
                <input class="form-control" type="text">
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">Loại đại lý: </label>
                <input class="form-control" type="text" required>
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">Địa chỉ:</label>
                <input class="form-control" type="text" required>
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">Tên người chịu trách nhiệm:</label>
                <input class="form-control" type="text" required>
            </div>
            <div class="form-group col-md-12">
                @*//  @Html.LabelFor(model => model.TienNo, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <label class="control-label">Tiền nợ:</label>
                
                    @Html.EditorFor(model => model.TienNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TienNo, "", new { @class = "text-danger" })
               
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">Kèm theo:</label>
                <input class="form-control" type="text" required>
            </div>
         
        </form>
        <button class="btn btn-save" type="button">Lưu phiếu</button>
        <a class="btn btn-cancel" href="XuatKho">Hủy bỏ</a>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "QLCongno")
</div>
